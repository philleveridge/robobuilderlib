function r : fact(n)
  IF n=0 THEN
    r=1
  ELSE
    Call R = fact(n-1)
    r=r*n
  ENDIF
endfunction


function r : fib(k)
  local t
  IF k>=2 THEN
    Call r = fib(k-1)
    Call t = fib(k-2)
    r=r+t
  ELSE
    r=k
  ENDIF
endfunction