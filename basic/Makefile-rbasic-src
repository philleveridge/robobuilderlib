#makefile

PROJECT=BASIC
TARGET=rbasic
INCLUDES=-include /usr/include/errno.h
LDFLAGS=

CFLAGS =  -D LINUX -D PARSE -D OMNIMA -D IMAGE -D VJ
CFLAGS += -g -Wall -gdwarf-2 -std=gnu99 -funsigned-char  # -funsigned-bitfields -fpack-struct -fshort-enums

REV = $(shell svnversion -n .)
CFLAGS += -D VER='"rbasic v=$(REV)\r\nCommands: i r l c z q s V R F $\r\n"'

OBJECTS = edit.o fix_fft.o  linux.o  lists.o express.o functions.o commands.o linux-remote.o basic.o matrix.o network.o fnetwork.o fmatrix.o trex.o oobj.o ostring.o ocells.o ostack.o odict.o rbmread.o ofunction.o oimg.o mem.o oexpress.o jpeg.o cmap.o opflow.o oparticles.o

#LIBS =  vj_cpp/vj.a -lpthread -lm -ljpeg  -lstdc++
LIBS =   vj_cpp/vj.a -lpthread -lm -ljpeg -lstdc++


all: $(TARGET)

%.o: %.c
	$(CC) $(INCLUDES) $(CFLAGS) -c $<

$(TARGET): $(OBJECTS)
	$(MAKE) -C vj_cpp 
	$(CXX) $(LDFLAGS) $(OBJECTS) $(LIBDIRS) $(LIBS) -o $(TARGET)


#openwrt package makefile

clean:
	rm -f *.o 
