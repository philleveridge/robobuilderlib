###############################################################################
# Makefile for the project RBASIC
###############################################################################

## General Flags
PROJECT = Basic
MCU = atmega128
TARGET = Basic2

## Attempt to tell what platform we're on, to pick the right avr-gcc

CC = gcc


## Options common to compile, link and assembly rules
COMMON = -mmcu=$(MCU)

## Compile options common for all C compilation units.
#CFLAGS = $(COMMON) -D AVR
CFLAGS = -D LINUX -D PARSE -D IMAGE 
CFLAGS += -g -Wall  -std=gnu99 -funsigned-char  # -gdwarf-2 -funsigned-bitfields -fpack-struct -fshort-enums
CFLAGS += -MD -MP -MT $(*F).o -MF dep/$(@F).d 

## Assembly specific flags
ASMFLAGS = $(COMMON)
ASMFLAGS += $(CFLAGS)
ASMFLAGS += -x assembler-with-cpp -Wa,-gdwarf2

## Linker flags
#LDFLAGS = $(COMMON)
LDFLAGS +=  -Wl,-Map=RBASIC.map 

REV = $(shell svnversion -n . | cut -d: -f2)
CFLAGS += -D VER='"Basic v=$(REV)\r\nCommands: i r l c z q s V R F $\r\n"'

## Intel Hex file production flags
HEX_FLASH_FLAGS = -R .eeprom

HEX_EEPROM_FLAGS = -j .eeprom
HEX_EEPROM_FLAGS += --set-section-flags=.eeprom="alloc,load"
HEX_EEPROM_FLAGS += --change-section-lma .eeprom=0 --no-change-warnings


## Objects that must be built in order to link

OBJECTS = basic.o edit.o fix_fft.o linux.o linux-remote.o express.o  functions.o  lists.o commands.o matrix.o network.o fmatrix.o fnetwork.o jpeg.o  cmap.o trex.o oobj.o ostring.o ocells.o ostack.o  ofunction.o odict.o oexpress2.o

LIBS = -lpthread -lm -ljpeg


## Objects explicitly added by the user
LINKONLYOBJECTS = 

## Build
all: $(TARGET)

## Compile
%.o: %.c
#	$(CC) $(INCLUDES) $(CFLAGS) -DPSD_SENSOR -c  $<
	$(CC) $(INCLUDES) $(CFLAGS) -c  $<
	
	
##Link
$(TARGET): $(OBJECTS)
	echo "Revision = " $(REV)	
	$(CC) $(LDFLAGS) $(OBJECTS) $(LINKONLYOBJECTS) $(LIBDIRS) $(LIBS) -o $(TARGET)-$(REV)
	$(shell rm Basic;ln -s $(TARGET)-$(REV) Basic)

## Clean target
clean:
	-rm -rf $(OBJECTS) 


## Other dependencies
-include $(shell mkdir dep 2>/dev/null) $(wildcard dep/*)

