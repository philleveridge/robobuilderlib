(DEF PBOARD (SIZE BOARD) 
  (FOR N (1 SIZE) 
    (FOR M (1 SIZE) 
       (IF (NULL (MEMB (LIST N M) BOARD))  (PRINT '_ ;) (PRINT 'Q ;))
    )
    (PR)
  ))


